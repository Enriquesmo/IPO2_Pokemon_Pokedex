<Page
    x:Class="IPO2_Pokemon_Pokedex.PokedexPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IPO2_Pokemon_Pokedex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Viewbox>

        <Grid Height="3006" Width="4556">
            <Grid.RowDefinitions>
                <RowDefinition Height="85*"/>
                <RowDefinition Height="249*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1388*"/>
                <ColumnDefinition Width="106*"/>
                <ColumnDefinition Width="1513*"/>
                <ColumnDefinition Width="1549*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="imgBackground" Source="/Assets/PokedexBackground.jpg" Stretch="UniformToFill" Grid.ColumnSpan="4" Grid.RowSpan="2"/>

            <ScrollViewer x:Name="lvPokemon" Grid.Column="2" Grid.RowSpan="2" BorderThickness="50" Background="White" FocusVisualSecondaryBrush="#66FFFFFF" 
                      BorderBrush="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" GotFocus="lvPokemon_GotFocus" IsEnabled="False" >
                <StackPanel x:Name="stackAux" HorizontalAlignment="Stretch" Margin="0,750,0,750">

                    <local:UserControl_Snorlax x:Name="Snorlax" Height="1500"/>
                    <local:UserControl_Raichu x:Name="Raichu" Height="1500"/>
                    <local:UserControl_Darumaka x:Name="Darumaka" Height="1500"/>
                    <local:UserControl_Sandshrew x:Name="Sandshrew" Height="1500"/>
                </StackPanel>
            </ScrollViewer>
            <Rectangle Stroke="Black" Fill="#99000000" Grid.Column="1" Margin="10,10,10,0" Grid.ColumnSpan="2"/>
            <Rectangle Stroke="Black" Fill="#99000000" Grid.Column="1" Margin="53,1476,10,10" Grid.ColumnSpan="2" Grid.Row="1"/>
            <Rectangle Grid.Column="2" Grid.RowSpan="2" Height="1500" HorizontalAlignment="Stretch" StrokeThickness="40" Stroke="Black"/>
            <ListView x:Name="lvAux" Grid.Column="3" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" 
                      HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectionChanged="MostrarPokemon" SelectedIndex="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Square150x150Logo.scale-200.png" Width="160"/>
                            <TextBlock Text="No" FontSize="160"/>
                            <TextBlock Text="{Binding id}" FontSize="160"/>
                            <TextBlock>
                                <Run xml:space="preserve">&#x9;</Run>
                            </TextBlock>
                            <TextBlock Text="{Binding name}" FontSize="160"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock x:Name="txtPropt" TextWrapping="Wrap" Text="Selecciona un Pokemon" FontSize="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,100,0,0" FocusVisualPrimaryBrush="White" Foreground="Black" Height="133" Width="1047"/>
            <Rectangle x:Name="Upline" HorizontalAlignment="Left" Height="2" Margin="-46,275,0,0" Stroke="Black" VerticalAlignment="Top" Width="1174" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <CompositeTransform ScaleY="-1"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            <TextBlock x:Name="txtlvl" HorizontalAlignment="Center" TextWrapping="Wrap" Text="LVL. ???" VerticalAlignment="Bottom" FocusVisualPrimaryBrush="White" Foreground="Black" FontSize="150" FontWeight="Bold" Margin="0,0,0,-50"/>
            <TextBlock x:Name="txtType" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TIPO ???" VerticalAlignment="Center" FocusVisualPrimaryBrush="White" Foreground="Black" FontSize="120" Grid.Row="1" Margin="0,0,0,1400"/>
            <Image x:Name="imgType" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Source="/Assets/Pokemon_Type_Icon_Normal.png" RenderTransformOrigin="0.5,0.5" Width="166" Height="149" Margin="0,550,0,0">
                <Image.RenderTransform>
                    <CompositeTransform ScaleY="1"/>
                </Image.RenderTransform>
            </Image>
            <TextBlock x:Name="txtHP" HorizontalAlignment="Center" TextWrapping="Wrap" Text="HP: ???" VerticalAlignment="Center" FocusVisualPrimaryBrush="White" Foreground="Black" FontSize="120" Grid.Row="1" Margin="0,0,0,550"/>
            <TextBlock x:Name="txtAttack" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Ataque: ???" VerticalAlignment="Center" FocusVisualPrimaryBrush="White" Foreground="Black" FontSize="120" Grid.Row="1" Margin="0,0,0,200"/>
            <TextBlock x:Name="txtDefense" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Defensa: ???" VerticalAlignment="Center" FocusVisualPrimaryBrush="White" Foreground="Black" FontSize="120" Grid.Row="1" Margin="0,150,0,0"/>
            <Button x:Name="bttnDetalles" Content="Más detalles" Height="150" Margin="191,1885,0,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Width="750" Background="Black" FontSize="50" Click="mostrarDetalles"/>

        </Grid>
    </Viewbox>
</Page>
